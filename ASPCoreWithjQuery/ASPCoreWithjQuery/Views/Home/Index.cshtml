</head>
<body>
    <header>
        <h1>Client Management</h1>
    </header>

    <section id="clients">
        <h2>Clients</h2>

        <!-- Client Form -->
        <form id="clientForm">
            <input type="hidden" id="clientId" name="clientId">
            <label for="clientName">Name:</label>
            <input type="text" id="clientName" name="clientName" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <label for="phoneNumber">Phone Number:</label>
            <input type="text" id="phoneNumber" name="phoneNumber" required>

            <label for="address">Address:</label>
            <input type="text" id="address" name="address" required>

            <label for="city">City:</label>
            <input type="text" id="city" name="city" required>

            <label for="country">Country:</label>
            <input type="text" id="country" name="country" required>

            <button type="submit">Save Client</button>
        </form>

        <h3>Client List</h3>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="client-list">
            </tbody>
        </table>
    </section>

    <footer>
        <p>&copy; 2024 Client Management. All rights reserved.</p>
    </footer>

    <script>
        $(document).ready(function () {
            loadClients();

            // Handle form submit for create/update
            $('#clientForm').submit(function (event) {
                event.preventDefault();

                const client = {
                    ClientName: $('#clientName').val(),
                    Email: $('#email').val(),
                    PhoneNumber: $('#phoneNumber').val(),
                    Address: $('#address').val(),
                    City: $('#city').val(),
                    Country: $('#country').val()
                };

                const clientId = $('#clientId').val();

                if (clientId) {
                    updateClient(clientId, client);
                } else {
                    createClient(client);
                }
            });

            function loadClients() {
                $.ajax({
                    url: 'http://localhost:5154/api/Clients',
                    type: 'GET',
                    success: function (data) {
                        const clientList = $('#client-list');
                        clientList.empty();
                        data.forEach(client => {
                            clientList.append(`
                                        <tr>
                                            <td>${client.ClientName}</td>
                                            <td>${client.Email}</td>
                                            <td>${client.PhoneNumber}</td>
                                            <td>${client.Address}</td>
                                            <td>${client.City}</td>
                                            <td>${client.Country}</td>
                                            <td>
                                                <button onclick="editClient(${client.ClientID})">Edit</button>
                                                <button onclick="deleteClient(${client.ClientID})">Delete</button>
                                            </td>
                                        </tr>
                                    `);
                        });
                    }
                });
            }

            function createClient(client) {
                $.ajax({
                    url: 'http://localhost:5154/api/Clients',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(client),
                    success: function () {
                        alert('Client created successfully');
                        $('#clientForm')[0].reset();
                        loadClients();
                    },
                    error: function () {
                        alert('Failed to create client');
                    }
                });
            }

            function updateClient(id, client) {
                $.ajax({
                    url: 'http://localhost:5154/api/Clients/' + id,
                    type: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(client),
                    success: function () {
                        alert('Client updated successfully');
                        $('#clientForm')[0].reset();
                        $('#clientId').val('');
                        loadClients();
                    },
                    error: function () {
                        alert('Failed to update client');
                    }
                });
            }

            window.editClient = function (id) {
                $.ajax({
                    url: 'http://localhost:5154/api/Clients/' + id,
                    type: 'GET',
                    success: function (client) {
                        $('#clientId').val(client.ClientID);
                        $('#clientName').val(client.ClientName);
                        $('#email').val(client.Email);
                        $('#phoneNumber').val(client.PhoneNumber);
                        $('#address').val(client.Address);
                        $('#city').val(client.City);
                        $('#country').val(client.Country);
                    }
                });
            };

            window.deleteClient = function (id) {
                if (confirm('Are you sure you want to delete this client?')) {
                    $.ajax({
                        url: 'http://localhost:5154/api/Clients/' + id,
                        type: 'DELETE',
                        success: function () {
                            alert('Client deleted successfully');
                            loadClients();
                        },
                        error: function () {
                            alert('Failed to delete client');
                        }
                    });
                }
            };
        });
    </script>
</body>
</html>


